{
  "name": "redis-best-practices-mcp",
  "displayName": "Redis Best Practices MCP",
  "description": "Get expert Redis guidance in your IDE. 29 best practices for data structures, memory, security, vector search, and more - powered by MCP for GitHub Copilot.",
  "version": "0.1.0",
  "publisher": "ThomasFindelkind",
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#DC382D",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tf-gmail/mcp-redis-best-practices"
  },
  "bugs": {
    "url": "https://github.com/tf-gmail/mcp-redis-best-practices/issues"
  },
  "homepage": "https://github.com/tf-gmail/mcp-redis-best-practices#readme",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Education",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "redis",
    "mcp",
    "best-practices",
    "copilot",
    "ai",
    "database",
    "cache",
    "nosql",
    "vector-search",
    "model-context-protocol"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "redis-best-practices.showTopics",
        "title": "Redis: Show Best Practice Topics"
      },
      {
        "command": "redis-best-practices.restartServer",
        "title": "Redis: Restart MCP Server"
      }
    ],
    "configuration": {
      "title": "Redis Best Practices MCP",
      "properties": {
        "redisBestPractices.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Redis Best Practices MCP server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-knowledge",
    "compile": "tsc -p ./",
    "copy-knowledge": "mkdir -p dist/mcp/knowledge && cp -r src/mcp/knowledge/rules dist/mcp/knowledge/",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0"
  }
}
